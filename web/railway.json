{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../athena-platform/client && npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "cd ../athena-platform/client && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
