  "screenshots": [
    {
      "src": "/screenshots/feed.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Discover career content"
    },
    {
      "src": "/screenshots/jobs.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Find verified job opportunities"
    }
  ],
  "shortcuts": [
    {
      "name": "Feed",
      "short_name": "Feed",
      "description": "View your personalized feed",
      "url": "/feed",
      "icons": [{ "src": "/icons/shortcut-feed.png", "sizes": "96x96" }]
    },
    {
      "name": "Jobs",
      "short_name": "Jobs",
      "description": "Browse job opportunities",
      "url": "/jobs",
      "icons": [{ "src": "/icons/shortcut-jobs.png", "sizes": "96x96" }]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "View your messages",
      "url": "/messages",
      "icons": [{ "src": "/icons/shortcut-messages.png", "sizes": "96x96" }]
    },
    {
      "name": "Courses",
      "short_name": "Learn",
      "description": "Continue learning",
      "url": "/courses",
      "icons": [{ "src": "/icons/shortcut-courses.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "browser"]
}
