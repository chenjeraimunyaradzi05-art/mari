# ===========================================
# ATHENA SERVER - PRODUCTION (Render/Railway)
# ===========================================
# Copy these to your hosting provider's Environment Variables

# Application
NODE_ENV=production
PORT=5000
API_URL=https://your-backend.onrender.com
CLIENT_URL=https://your-app.netlify.app
TRUST_PROXY=true
ALLOWED_ORIGINS=https://your-app.netlify.app,https://www.your-domain.com

# Database (PostgreSQL - Neon/Supabase/Railway)
DATABASE_URL="postgresql://user:password@host:5432/athena_prod?sslmode=require"

# JWT Authentication (CHANGE THESE!)
JWT_SECRET=your-super-secure-random-string-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxx
SENDGRID_FROM_EMAIL=noreply@athena.com

# OpenAI (for AI features)
OPENAI_API_KEY=sk-xxxx

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=athena-uploads
AWS_REGION=ap-southeast-2
