# ===========================================
# ATHENA SERVER ENVIRONMENT VARIABLES
# ===========================================

# Application
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000
TRUST_PROXY=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/athena_dev"

# Redis
REDIS_URL="redis://localhost:6380"

# ===========================================
# ML SERVICE
# ===========================================
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=30000

# ===========================================
# OPENSEARCH (Full-text Search)
# ===========================================
OPENSEARCH_NODE=http://localhost:9200
# OPENSEARCH_USERNAME=admin
# OPENSEARCH_PASSWORD=admin

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Auth0 (Optional - for SSO)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PREMIUM_PRICE_ID=price_xxxxx

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=athena-platform-media-dev
S3_BUCKET_PUBLIC=athena-platform-public-dev

# ===========================================
# CDN (Content Delivery)
# ===========================================
CDN_URL=https://cdn.athena.app
CLOUDFRONT_KEY_PAIR_ID=your_cloudfront_key_id
CLOUDFRONT_PRIVATE_KEY=your_cloudfront_private_key

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@athena.com
EMAIL_FROM_NAME=Athena

# ===========================================
# PUSH NOTIFICATIONS (Firebase)
# ===========================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ===========================================
# VIDEO PROCESSING (Mux)
# ===========================================
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret
MUX_WEBHOOK_SECRET=your_mux_webhook_secret

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===========================================
# BACKGROUND WORKERS
# ===========================================
ENABLE_WORKERS=true
WORKER_CONCURRENCY=5

# ===========================================
# METRICS
# ===========================================
METRICS_TOKEN=your_metrics_token
LOG_LEVEL=debug

# ===========================================
# LOCALSTACK (Development Only)
# ===========================================
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=true

